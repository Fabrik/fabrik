<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">
		<fieldset name="plg-dropdown-multi" label="COM_FABRIK_DATA">

			<field type="helplink"
				url="PLG_ELEMENT_DROPDOWN_HELP_SERVER" />

			<field name="sub_options"
				type="suboptions"
				label="COM_FABRIK_SUBOPTIONS"
				description="PLG_ELEMENT_DROPDOWN_SUBOPTIONS_DESC" />

			<field name="multiple"
				type="radio"
				default="0"
				class="btn-group"
				label="PLG_ELEMENT_DROPDOWN_ALLOW_MULTISELECT_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="dropdown_multisize"
				type="text"
				class="input-mini"
				default="3"
				description="PLG_ELEMENT_DROPDOWN_MULTISIZE_DESC"
				label="PLG_ELEMENT_DROPDOWN_MULTISIZE_LABEL"
				size="3" />

		</fieldset>

		<fieldset label="PLG_ELEMENT_DROPDOWN_FRONT_END_ADDITIONS" name="plg-dropdown-add">

			<field type="helplink"
				url="PLG_ELEMENT_DROPDOWN_HELP_SERVER" />

			<field name="allow_frontend_addtodropdown"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_DROPDOWN_EDIT_DROPDOWN_DESC"
				label="PLG_ELEMENT_DROPDOWN_EDIT_DROPDOWN_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="dd-allowadd-onlylabel"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_DROPDOWN_ONLY_ADD_LABEL_DESC"
				label="PLG_ELEMENT_DROPDOWN_ONLY_ADD_LABEL_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="dd-savenewadditions"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_DROPDOWN_SAVE_NEW_ADDITIONS_DESC"
				label="PLG_ELEMENT_DROPDOWN_SAVE_NEW_ADDITIONS_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

		</fieldset>

		<fieldset label="Advanced" name="plg-dropdown-advanced">

			<field type="helplink"
				url="PLG_ELEMENT_DROPDOWN_HELP_SERVER" />

			<field name="options_split_str"
				type="text"
				default=""
				description="PLG_ELEMENT_DROPDOWN_SEPARATOR_DESC"
				label="PLG_ELEMENT_DROPDOWN_SEPARATOR_LABEL" size="10" />

			<field name="dropdown_populate"
				type="fabrikeditor"
				mode="php"
				description="PLG_ELEMENT_DROPDOWN_POPULATE_DESC"
				label="PLG_ELEMENT_DROPDOWN_POPULATE_LABEL" />

			<field name="dropdown_populate_inline_desc"
				type="spacer"
				label="PLG_ELEMENT_DROPDOWN_POPULATE_DESC" />

		</fieldset>
		
		<fieldset label="PLG_ELEMENT_DROPDOWN_FORMATTING" name="plg-dropdown-formatting">

			<field type="helplink"
				url="PLG_ELEMENT_DROPDOWN_HELP_SERVER" />

			<field name="advanced_behavior"
				type="radio"
				default="0"
				class="btn-group"
				label="PLG_ELEMENT_DROPDOWN_JQUERY_CHOSEN_LABEL"
				description="PLG_ELEMENT_DROPDOWN_JQUERY_CHOSEN_DESC" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="bootstrap_class"
				type="bootstrapfieldclass"
				default="input-medium"
				label="PLG_ELEMENT_BOOTSTRAP_CLASS_LABEL"
				description="PLG_ELEMENT_BOOTSTRAP_CLASS_DESC" />

		</fieldset>
		<fieldset label="COM_FABRIK_DATA"
		          name="plg-textarea">

			<field name="repeat"
			       label="PLG_ELEMENT_REPEAT"
			       type="checkbox"
				   value="1"/>

			<field name="join_conn_id"
			       label="PLG_ELEMENT_DBJOIN_CONNECTION"
			       type="connections" />

			<field name="repeat_db_name"
			       label="PLG_ELEMENT_DBJOIN_REPEAT_TABLE_LABEL"
			       description="PLG_ELEMENT_DBJOIN_REPEAT_TABLE_DESC"
			       observe="params_join_conn_id"
			       key="name"
			       type="tables"
				   mode="combo"
				   />

			<field name="repeat_parent_id"
			       type="listfields"
			       highlightpk="true"
			       connection="params_join_conn_id"
			       description="PLG_ELEMENT_DBJOIN_PARENT_ID_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARENT_ID_LABEL"
			       table="params_repeat_db_name"
				   mode="gui"
				   modefield="field" />

			<field name="repeat_element"
			       type="listfields"
			       connection="params_join_conn_id"
			       description="PLG_ELEMENT_DBJOIN_THIS_FIELD_DESC"
			       label="PLG_ELEMENT_DBJOIN_THIS_FIELD_LABEL"
			       table="params_repeat_db_name"
				   mode="gui"
				   modefield="field" />

			<field name="repeat_params"
			       type="listfields"
			       connection="params_join_conn_id"
			       description="PLG_ELEMENT_DBJOIN_PARAMS_FIELD_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARAMS_FIELD_LABEL"
			       table="params_repeat_db_name"
				   mode="gui"
				   modefield="field" />

			<field name="repeat_params_type"
			       type="radio"
				   class="btn-group"
				   default="TEXT"
			       description="PLG_ELEMENT_DBJOIN_PARAMS_TYPE_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARAMS_TYPE_LABEL">
					   <option value="TEXT">TEXT</option>
					   <option value="VARCHAR(255)">VARCHAR</option>
					   <option value="INT(11)">INT</option>
				   </field>

			<field name="repeat_params_value"
			       type="listfields"
				   valueformat="tableelement"
			       description="PLG_ELEMENT_DBJOIN_PARAMS_VALUE_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARAMS_VALUE_LABEL"
				   />

		</fieldset>

	</fields>
	<fields>
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-element-dropdown" label="COM_FABRIK_OPTIONS">

			<field type="helplink"
				url="PLG_ELEMENT_DROPDOWN_HELP_SERVER" />

			<field name="default"
				type="fabrikeditor"
				mode="php"
				label="PLG_ELEMENT_DROPDOWN_DEFAULT_LABEL" />

			<field name="eval"
				type="radio"
				default="0"
				class="btn-group"
				label="PLG_ELEMENT_DROPDOWN_EVAL_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

		</fieldset>
	</fields>
</form>
