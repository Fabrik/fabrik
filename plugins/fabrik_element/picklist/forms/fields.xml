<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields
		addfieldpath="/administrator/components/com_fabrik/models/fields"
		name="params">
		<fieldset label="PLG_FABRIK_ELEMENT_PICKLIST" name="plg-element-picklist">

			<field
				type="helplink"
				url="PLG_ELEMENT_PICKLIST_HELP_SERVER" />

			<field name="sub_options"
				type="suboptions"
				label="COM_FABRIK_SUBOPTIONS" />

			<field name="allowadd"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_PICKLIST_EDIT_DROPDOWN_DESC"
				label="PLG_ELEMENT_PICKLIST_EDIT_DROPDOWN_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="allowadd-onlylabel"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_PICKLIST_ONLY_ADD_LABEL_DESC"
				label="PLG_ELEMENT_PICKLIST_ONLY_ADD_LABEL_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="savenewadditions"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_PICKLIST_SAVE_NEW_ADDITIONS_DESC"
				label="PLG_ELEMENT_PICKLIST_SAVE_NEW_ADDITIONS_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="picklist-hovercolour"
				type="color"
				default="#AFFFFD"
				description="PLG_ELEMENT_PICKLIST_HOVER_COLOUR_DESCRIPTION"
				label="PLG_ELEMENT_PICKLIST_HOVER_COLOUR_LABEL"
				size="6" />

			<field name="picklist-bghovercolour"
				type="color"
				default="#FFFFDF"
				description="PLG_ELEMENT_PICKLIST_BG_HOVER_COLOUR_DESCRIPTION"
				label="PLG_ELEMENT_PICKLIST_BG_HOVER_COLOUR_LABEL"
				size="6" />

		</fieldset>
		<fieldset label="Advanced" name="plg-picklist-advanced">

			<field type="helplink"
				url="PLG_ELEMENT_PICKLIST_HELP_SERVER" />

			<field name="dropdown_populate"
				type="fabrikeditor"
				mode="php"
				description="PLG_ELEMENT_PICKLIST_POPULATE_DESC"
				label="PLG_ELEMENT_PICKLIST_POPULATE_LABEL" />

			<field name="dropdown_populate_inline_desc"
				type="spacer"
				label="PLG_ELEMENT_PICKLIST_POPULATE_DESC" />

		</fieldset>
		<fieldset label="COM_FABRIK_DATA"
		          name="plg-textarea">

			<field name="repeat"
			       label="PLG_ELEMENT_REPEAT"
			       type="checkbox"
				   value="1"/>

			<field name="join_conn_id"
			       label="PLG_ELEMENT_DBJOIN_CONNECTION"
			       type="connections" />

			<field name="repeat_db_name"
			       label="PLG_ELEMENT_DBJOIN_REPEAT_TABLE_LABEL"
			       description="PLG_ELEMENT_DBJOIN_REPEAT_TABLE_DESC"
			       observe="params_join_conn_id"
			       key="name"
			       type="tables"
				   mode="combo"
				   />

			<field name="repeat_parent_id"
			       type="listfields"
			       highlightpk="true"
			       connection="params_join_conn_id"
			       description="PLG_ELEMENT_DBJOIN_PARENT_ID_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARENT_ID_LABEL"
			       table="params_repeat_db_name"
				   mode="gui"
				   modefield="field" />

			<field name="repeat_element"
			       type="listfields"
			       connection="params_join_conn_id"
			       description="PLG_ELEMENT_DBJOIN_THIS_FIELD_DESC"
			       label="PLG_ELEMENT_DBJOIN_THIS_FIELD_LABEL"
			       table="params_repeat_db_name"
				   mode="gui"
				   modefield="field" />

			<field name="repeat_params"
			       type="listfields"
			       connection="params_join_conn_id"
			       description="PLG_ELEMENT_DBJOIN_PARAMS_FIELD_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARAMS_FIELD_LABEL"
			       table="params_repeat_db_name"
				   mode="gui"
				   modefield="field" />

			<field name="repeat_params_type"
			       type="radio"
				   class="btn-group"
				   default="TEXT"
			       description="PLG_ELEMENT_DBJOIN_PARAMS_TYPE_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARAMS_TYPE_LABEL">
					   <option value="TEXT">TEXT</option>
					   <option value="VARCHAR(255)">VARCHAR</option>
					   <option value="INT(11)">INT</option>
				   </field>

			<field name="repeat_params_value"
			       type="listfields"
				   valueformat="tableelement"
			       description="PLG_ELEMENT_DBJOIN_PARAMS_VALUE_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARAMS_VALUE_LABEL"
				   />

		</fieldset>

	</fields>
</form>
