<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields
		addfieldpath="/administrator/components/com_fabrik/models/fields"
		name="params">
		<fieldset label="PLG_FABRIK_ELEMENT_PICKLIST" name="plg-element-picklist">

			<field
				type="helplink"
				url="PLG_ELEMENT_PICKLIST_HELP_SERVER" />

			<field name="sub_options"
				type="suboptions"
				label="COM_FABRIK_SUBOPTIONS" />

			<field name="allowadd"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_PICKLIST_EDIT_DROPDOWN_DESC"
				label="PLG_ELEMENT_PICKLIST_EDIT_DROPDOWN_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="allowadd-onlylabel"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_PICKLIST_ONLY_ADD_LABEL_DESC"
				label="PLG_ELEMENT_PICKLIST_ONLY_ADD_LABEL_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="savenewadditions"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_PICKLIST_SAVE_NEW_ADDITIONS_DESC"
				label="PLG_ELEMENT_PICKLIST_SAVE_NEW_ADDITIONS_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="picklist-hovercolour"
				type="color"
				default="#AFFFFD"
				description="PLG_ELEMENT_PICKLIST_HOVER_COLOUR_DESCRIPTION"
				label="PLG_ELEMENT_PICKLIST_HOVER_COLOUR_LABEL"
				size="6" />

			<field name="picklist-bghovercolour"
				type="color"
				default="#FFFFDF"
				description="PLG_ELEMENT_PICKLIST_BG_HOVER_COLOUR_DESCRIPTION"
				label="PLG_ELEMENT_PICKLIST_BG_HOVER_COLOUR_LABEL"
				size="6" />

		</fieldset>
		<fieldset label="PLG_FABRIK_PICKLIST_SCROLLING_OPTIONS" name="plg-picklist-scrolling">
        
			<field name="scrollfrom"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_PICKLIST_SCROLL_DESC"
				label="PLG_ELEMENT_PICKLIST_SCROLL_FROM_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
            
			<field name="from-maxitems" showon="scrollfrom:1"
				type="text"
				class="input-mini"
				description="PLG_ELEMENT_PICKLIST_SCROLL_MAXITEMS_DESC"
                label="PLG_ELEMENT_PICKLIST_SCROLL_MAXITEMS_LABEL"
				default="8" 
				size="3" />
            
			<field name="from-height" showon="scrollfrom:1"
				type="text"
				class="input-mini"
				description="PLG_ELEMENT_PICKLIST_SCROLL_HEIGHT_DESC"
                label="PLG_ELEMENT_PICKLIST_SCROLL_HEIGHT_LABEL"
				default="175" 
				size="3" />
        
			<field name="scrollto"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_PICKLIST_SCROLL_DESC"
				label="PLG_ELEMENT_PICKLIST_SCROLL_TO_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
            
			<field name="to-maxitems" showon="scrollto:1"
				type="text"
				class="input-mini"
				description="PLG_ELEMENT_PICKLIST_SCROLL_MAXITEMS_DESC"
                label="PLG_ELEMENT_PICKLIST_SCROLL_MAXITEMS_LABEL"
				default="8" 
				size="3" />
            
			<field name="to-height" showon="scrollto:1"
				type="text"
				class="input-mini"
				description="PLG_ELEMENT_PICKLIST_SCROLL_HEIGHT_DESC"
                label="PLG_ELEMENT_PICKLIST_SCROLL_HEIGHT_LABEL"
				default="175" 
				size="3" />

		</fieldset>
		<fieldset label="Advanced" name="plg-picklist-advanced">

			<field type="helplink"
				url="PLG_ELEMENT_PICKLIST_HELP_SERVER" />

			<field name="dropdown_populate"
				type="fabrikeditor"
				mode="php"
				description="PLG_ELEMENT_PICKLIST_POPULATE_DESC"
				label="PLG_ELEMENT_PICKLIST_POPULATE_LABEL" />

			<field name="dropdown_populate_inline_desc"
				type="spacer"
				label="PLG_ELEMENT_PICKLIST_POPULATE_DESC" />

		</fieldset>
	</fields>
</form>
