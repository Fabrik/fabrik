<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset label="COM_FABRIK_OPTIONS" name="plg-element-radiobutton">

			<field type="helplink"
				url="PLG_ELEMENT_RADIOBUTTON_HELP_SERVER" />

			<field name="sub_options"
				type="suboptions"
				default_max="1"
				label="COM_FABRIK_SUBOPTIONS"/>

			<field name="options_per_row"
				default="4"
				class="input-mini"
				label="PLG_ELEMENT_RADIO_OPTIONS_PER_ROW_LABEL"
				size="2"
				type="width"/>

			<field name="btnGroup"
				type="radio"
				class="btn-group"
				default="0"
				label="PLG_ELEMENT_RADIO_BTN_GROUP_LABEL"
				description="PLG_ELEMENT_RADIO_BTN_GROUP_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

		</fieldset>

		<fieldset label="PLG_ELEMENT_RADIO_FRONT_END_ADDITIONS" name="plg-radiobutton-add">

			<field type="helplink"
				url="PLG_ELEMENT_RADIOBUTTON_HELP_SERVER" />

			<field name="allow_frontend_addtoradio"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_RADIO_ADD_OPTION_DESC"
				label="PLG_ELEMENT_RADIO_ADD_OPTION_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="rad-allowadd-onlylabel"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_RADIO_ONLY_ADD_LABEL_DESC"
				label="PLG_ELEMENT_RADIO_ONLY_ADD_LABEL_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="rad-savenewadditions"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_RADIO_SAVE_NEW_ADDITIONS_DESC"
				label="PLG_ELEMENT_RADIO_SAVE_NEW_ADDITIONS_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

		</fieldset>
		
		<fieldset label="Advanced" name="plg-dropdown-advanced">

			<field type="helplink"
				url="PLG_ELEMENT_RADIOBUTTON_HELP_SERVER" />

			<field name="dropdown_populate"
				type="fabrikeditor"
				mode="php"
				description="PLG_ELEMENT_RADIO_POPULATE_DESC"
				label="PLG_ELEMENT_RADIO_POPULATE_LABEL" />

			<field name="dropdown_populate_inline_desc"
				type="spacer"
				label="PLG_ELEMENT_RADIO_POPULATE_DESC" />

		</fieldset>
		<fieldset label="COM_FABRIK_DATA"
		          name="plg-textarea">

			<field name="repeat"
			       label="PLG_ELEMENT_REPEAT"
			       type="checkbox"
				   value="1"/>

			<field name="join_conn_id"
			       label="PLG_ELEMENT_DBJOIN_CONNECTION"
			       type="connections" />

			<field name="repeat_db_name"
			       label="PLG_ELEMENT_DBJOIN_REPEAT_TABLE_LABEL"
			       description="PLG_ELEMENT_DBJOIN_REPEAT_TABLE_DESC"
			       observe="params_join_conn_id"
			       key="name"
			       type="tables"
				   mode="combo"
				   />

			<field name="repeat_parent_id"
			       type="listfields"
			       highlightpk="true"
			       connection="params_join_conn_id"
			       description="PLG_ELEMENT_DBJOIN_PARENT_ID_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARENT_ID_LABEL"
			       table="params_repeat_db_name"
				   mode="gui"
				   modefield="field" />

			<field name="repeat_element"
			       type="listfields"
			       connection="params_join_conn_id"
			       description="PLG_ELEMENT_DBJOIN_THIS_FIELD_DESC"
			       label="PLG_ELEMENT_DBJOIN_THIS_FIELD_LABEL"
			       table="params_repeat_db_name"
				   mode="gui"
				   modefield="field" />

			<field name="repeat_params"
			       type="listfields"
			       connection="params_join_conn_id"
			       description="PLG_ELEMENT_DBJOIN_PARAMS_FIELD_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARAMS_FIELD_LABEL"
			       table="params_repeat_db_name"
				   mode="gui"
				   modefield="field" />

			<field name="repeat_params_type"
			       type="radio"
				   class="btn-group"
				   default="TEXT"
			       description="PLG_ELEMENT_DBJOIN_PARAMS_TYPE_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARAMS_TYPE_LABEL">
					   <option value="TEXT">TEXT</option>
					   <option value="VARCHAR(255)">VARCHAR</option>
					   <option value="INT(11)">INT</option>
				   </field>

			<field name="repeat_params_value"
			       type="listfields"
				   valueformat="tableelement"
			       description="PLG_ELEMENT_DBJOIN_PARAMS_VALUE_DESC"
			       label="PLG_ELEMENT_DBJOIN_PARAMS_VALUE_LABEL"
				   />

		</fieldset>

	</fields>
</form>
