<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">
		
		<fieldset name="plg-element-yesno">
		
			<field type="helplink"
				url="PLG_ELEMENT_YESNO_HELP_SERVER" />
				
			<field name="yesno_default"
				type="list"
				default="0"
				label="PLG_ELEMENT_YESNO_DEAFULT_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
            		<field name="yes_image"
			    	type="text"
			    	label="PLG_ELEMENT_YESNO_YES_IMAGE_LABEL"
			    	description="PLG_ELEMENT_YESNO_YES_IMAGE_DESC"                   
			    	size="30"/>
                   
			<field name="no_image"
			    	type="text"
			    	label="PLG_ELEMENT_YESNO_NO_IMAGE_LABEL"
			    	description="PLG_ELEMENT_YESNO_NO_IMAGE_DESC"                   
			    	size="30"/>   

			<field name="image_height"
			    	type="text"
			    	class="input-mini"
			    	label="PLG_ELEMENT_YESNO_IMAGE_HEIGHT_LABEL"
			    	description="PLG_ELEMENT_YESNO_IMAGE_HEIGHT_DESC" />   				
				
			<field name="toggle_others"
				type="radio"
				class="btn-group"
				default="0"
				description="PLG_ELEMENT_YESNO_TOGGLE_OTHERS_DESC"
				label="PLG_ELEMENT_YESNO_TOGGLE_OTHERS_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
				
			<field name="toggle_where"
				type="fabrikeditor"
				mode="mysql"
				description="PLG_ELEMENT_YESNO_TOGGLE_WHERE_DESC"
				label="PLG_ELEMENT_YESNO_TOGGLE_WHERE_LABEL"
				/>
				
		</fieldset>
		
	</fields>
</form>
